<Page x:Class="DesktopApp.Pages.LIstSubjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xfc="clr-namespace:XamlFlair.Controls;assembly=XamlFlair.WPF"
      xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF"
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список пар и групп">

    <Grid>
        <xfc:AnimatedListView Name="AnimLvSubject"  xf:Animations.Items="{xf:Animate BasedOn={StaticResource FadeInForListViews}}" xf:Animations.InterElementDelay="25">
            <xfc:AnimatedListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Subject.Name}"></TextBlock>
                </DataTemplate>
            </xfc:AnimatedListView.ItemTemplate>
        </xfc:AnimatedListView>
    </Grid>
</Page>
