<Page x:Class="DesktopApp.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel>
            <CheckBox x:Name="CbIsRemember"></CheckBox>
            <TextBox x:Name="TbLogin"></TextBox>
            <PasswordBox x:Name="PbPassword"></PasswordBox>
            <Button x:Name="BtnOk" Height="50" Click="BtnOk_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
