<Page x:Class="DesktopApp.Pages.ListOfExerciseAndStudents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xfc="clr-namespace:XamlFlair.Controls;assembly=XamlFlair.WPF"
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfExerciseAndStudents">

    <Grid>
        
        <xfc:AnimatedListView Name="AnimLvExercise" SelectionMode="Extended">
            <xfc:AnimatedListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Key}"></TextBlock>
                        <xfc:AnimatedListView ItemsSource="{Binding }">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Exercise.Name}"></TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </xfc:AnimatedListView>
                    </StackPanel>
                </DataTemplate>
            </xfc:AnimatedListView.ItemTemplate>
        </xfc:AnimatedListView>
    </Grid>
</Page>
